{
  "name": "BrowserQuest",
  "version": "0.0.1",
  "private": false,
  "watch": {
    "{client,server,tests}/**/*.js": [
      "test"
    ]
  },
  "scripts": {
    "test": "mocha --compilers js:babel-register tests/**/*.js",
    "coverage": "rm -rf coverage/ && istanbul cover --report html _mocha -- --compilers js:babel-register --recursive tests/",
    "lcov": "rm -rf coverage/ && istanbul cover --report lcov _mocha -- --compilers js:babel-register --recursive tests/",
    "watch": "npm-scripts-watcher"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "bison": "^1.1.1",
    "log": "^1.4.0",
    "sanitizer": "^0.1.3",
    "underscore": "^1.8.3",
    "websocket": "theturtle32/WebSocket-Node",
    "websocket-server": "miksago/node-websocket-server"
  },
  "devDependencies": {
    "babel-core": "^6.7.7",
    "babel-preset-es2015": "^6.6.0",
    "chai": "^3.5.0",
    "istanbul": "^1.0.0-alpha",
    "mocha": "^2.4.5",
    "npm-scripts-watcher": "^1.0.2",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0"
  }
}
